{
  "name": "hr-tools",
  "version": "1.0.0",
  "description": "HR Tools with AI capabilities",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite --host",
    "dev:backend": "tsx watch server.ts",
    "build": "tsc && vite build",
    "start": "node server.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "openai": "4.28.0",
    "ai": "2.2.36",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "express": "4.18.2",
    "cors": "2.8.5",
    "dotenv": "16.4.4",
    "@chakra-ui/react": "2.8.2",
    "@emotion/react": "11.11.3",
    "@emotion/styled": "11.11.0",
    "framer-motion": "10.18.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@types/node": "20.11.19",
    "@types/express": "4.17.21",
    "@types/cors": "2.8.17",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.17",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "@tailwindcss/typography": "0.5.10",
    "typescript": "5.3.3",
    "tsx": "4.7.1",
    "concurrently": "8.2.2",
    "vite": "5.1.3"
  }
} 